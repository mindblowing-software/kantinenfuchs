<p style="color: green"><%= notice %></p>

<h1>Bestellungen</h1>

<div id="orders">

  <div class="table-responsive small">
    <table class="table table-striped table-sm">
      <thead>
        <tr>
          <th scope="col">Datum</th>
          <th scope="col">Kunde</th>
          <th scope="col">Anzahl Bestellungen</th>
          <th scope="col">Abweichung</th>          
          <th scope="col">Bestellt von</th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr id="<%= dom_id order %>">
            <td><%= order.ordered_at %></td>
            <td><%= order.customer.name %></td>
            <td><%= order.number %></td>
            <td><%= order.number - order.customer.number_orders %></td>
            <td><%= order.user.firstname %> <%= order.user.lastname %></td>
            <td class="text-end"><%= link_to "Anzeigen", order %> |
            <%= link_to "Bearbeiten", edit_order_path(order) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<%= link_to "New order", new_order_path %>
</div>
