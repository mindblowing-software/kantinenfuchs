<div id="<%= dom_id customer %>" class="card">
  <h5 class="card-header"><%= customer.name %></h5>
  <div class="card-body">
    <h5 class="card-title">Defaultanzahl Essen: <%= customer.number_orders %></h5>
    <p class="card-text">
      <%= customer.street %> <%= customer.house_number %><br />
      <%= customer.zip_code %> <%= customer.city %>
    </p> 
    <p class="card-text"><%= customer.contact_email %></p>   
    <p class="card-text"><%= customer.contact_phone %></p> 
    <p class="card-text"><strong>Benutzer</strong></p>
    <ul>
      <% customer.users.each do |user| %>
        <li>
          <%= user.firstname %> <%= user.lastname %> <%= user.email %> 
          <% if user.invitation_accepted_at.nil? %><span class="badge text-bg-warning">Eingeladen</span>
          <% else %><span class="badge text-bg-success">Aktiv</span>
          <% end -%>
        </li>
      <% end %>
    </ul>
  </div>
</div>
